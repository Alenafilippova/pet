            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorOnAccent"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
